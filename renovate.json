{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended"
  ],
  "schedule": [
    "before 6am on monday"
  ],
  "timezone": "UTC",
  "labels": ["dependencies"],
  "commitMessagePrefix": "chore(deps):",
  "prConcurrentLimit": 5,
  "packageRules": [
    {
      "description": "Group Python Django-related packages",
      "matchDatasources": ["pypi"],
      "matchPackagePatterns": ["^django"],
      "groupName": "django packages",
      "matchUpdateTypes": ["minor", "patch"]
    },
    {
      "description": "Group Python dev dependencies",
      "matchDatasources": ["pypi"],
      "matchPackageNames": ["ruff", "mypy", "djlint"],
      "groupName": "python dev dependencies",
      "matchUpdateTypes": ["minor", "patch"]
    },
    {
      "description": "Group JavaScript dev dependencies",
      "matchDatasources": ["npm"],
      "matchDepTypes": ["devDependencies"],
      "groupName": "javascript dev dependencies",
      "matchUpdateTypes": ["minor", "patch"]
    },
    {
      "description": "Group GitHub Actions updates",
      "matchManagers": ["github-actions"],
      "groupName": "github actions",
      "commitMessagePrefix": "chore(ci):"
    },
    {
      "description": "Group Bootstrap CDN updates",
      "matchManagers": ["regex"],
      "matchPackagePatterns": ["^bootstrap"],
      "groupName": "bootstrap cdn",
      "commitMessagePrefix": "chore(deps):"
    }
  ],
  "regexManagers": [
    {
      "description": "Update Bootstrap CSS CDN links",
      "fileMatch": ["\\.html$"],
      "matchStrings": [
        "https://cdn\\.jsdelivr\\.net/npm/bootstrap@(?<currentValue>[0-9.]+)/dist/css/bootstrap(?:\\.min)?\\.css"
      ],
      "datasourceTemplate": "npm",
      "depNameTemplate": "bootstrap",
      "versioningTemplate": "npm"
    },
    {
      "description": "Update Bootstrap JS CDN links",
      "fileMatch": ["\\.html$"],
      "matchStrings": [
        "https://cdn\\.jsdelivr\\.net/npm/bootstrap@(?<currentValue>[0-9.]+)/dist/js/bootstrap(?:\\.bundle)?(?:\\.min)?\\.js"
      ],
      "datasourceTemplate": "npm",
      "depNameTemplate": "bootstrap",
      "versioningTemplate": "npm"
    },
    {
      "description": "Update Bootstrap Icons CDN links",
      "fileMatch": ["\\.html$"],
      "matchStrings": [
        "https://cdn\\.jsdelivr\\.net/npm/bootstrap-icons@(?<currentValue>[0-9.]+)/font/bootstrap-icons\\.css"
      ],
      "datasourceTemplate": "npm",
      "depNameTemplate": "bootstrap-icons",
      "versioningTemplate": "npm"
    }
  ]
}
